@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

<div class="container d-flex justify-content-center align-items-center" style="height:100vh;">
    <div class="text-center">
        <div class="card shadow-lg p-4">
            <h2 class="text-danger">Access Denied</h2>
            <p class="mt-3">You do not have permission to access this page.</p>
            <p>You will be redirected to the vehicle list in <span id="countdown">5</span> seconds.</p>
            <a href="/Vehicle/Index" class="btn btn-primary mt-3">Go Now</a>
        </div>
    </div>
</div>

<script>
    let seconds = 5;
    const countdown = document.getElementById('countdown');

    const interval = setInterval(() => {
        seconds--;
        countdown.textContent = seconds;

        if (seconds <= 0) {
            clearInterval(interval);
            window.location.href = '/Vehicle/Index';
        }
    }, 1000);
</script>
