@model List<SwiftWheels.Models.RentedVehicle>

@{
    ViewData["Title"] = "My Rentals";
    Layout = "_Layout";
}

<h2>My Rentals</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have not rented any vehicles yet.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Vehicle</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Vehicle.Make @r.Vehicle.Model</td>
                    <td>@r.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@r.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@r.TotalPrice ₺</td>
                </tr>
            }
        </tbody>
    </table>
}
