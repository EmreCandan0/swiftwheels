@using System.Security.Claims

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SwiftWheels</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">SwiftWheels</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated && User.IsInRole("ROLE_USER"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="RentedVehicle" asp-action="Index">My Rentals</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Vehicle" asp-action="Index">Vehicles</a>
                    </li>
                }
                @if (User.IsInRole("ROLE_ADMIN"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminRental" asp-action="Index">Admin Panel</a>
                    </li>
                }

            </ul>

            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="navbar-text">
                            Merhaba, @User.FindFirst(ClaimTypes.GivenName)?.Value
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @* ✔ TempData mesajları *@
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                @TempData["RegisterSuccess"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["LoginSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                @TempData["LoginSuccess"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
