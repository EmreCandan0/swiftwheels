@model SwiftWheels.Models.Vehicle
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<h4>Are you sure you want to delete this vehicle?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Make</dt>
    <dd class="col-sm-10">@Model.Make</dd>

    <dt class="col-sm-2">Model</dt>
    <dd class="col-sm-10">@Model.Model</dd>

    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price ₺</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
