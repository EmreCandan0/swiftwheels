@model SwiftWheels.Models.Vehicle
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Vehicle";
}

<h2>Edit Vehicle</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="VehicleType"></label>
        <input asp-for="VehicleType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Km"></label>
        <input asp-for="Km" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EnginePower"></label>
        <input asp-for="EnginePower" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EngineCapacity"></label>
        <input asp-for="EngineCapacity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Fuel"></label>
        <input asp-for="Fuel" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="Availability" class="form-check-input" id="chkAvailable" />
        <label class="form-check-label" for="chkAvailable">Available</label>
    </div>

    <div class="form-group">
        <label>Update Photo (optional)</label>
        <input type="file" name="photoFile" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="mb-3">
            <label>Current Photo:</label><br />
            <img src="@Model.ImagePath" width="150" height="100" style="object-fit: cover;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
